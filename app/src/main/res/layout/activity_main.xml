<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/gout"
        android:layout_width="200dp"
        android:background="@drawable/rounded_btn"
        android:layout_height="200dp"
        android:layout_marginTop="88dp"
        android:src="@drawable/gout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gout"
        android:textColor="#000"
        android:textSize="35sp"

        app:layout_constraintBottom_toBottomOf="@+id/gout"
        app:layout_constraintEnd_toEndOf="@+id/gout"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="@+id/gout"
        app:layout_constraintTop_toTopOf="@+id/gout"
        app:layout_constraintVertical_bias="0.81" />



    <ImageView
        android:id="@+id/arthritis"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="24dp"
        android:src="@drawable/arthritis"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gout" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Arthritis"
        android:textColor="#000"
        android:textSize="35sp"
        app:layout_constraintBottom_toBottomOf="@+id/arthritis"
        app:layout_constraintEnd_toEndOf="@+id/arthritis"
        app:layout_constraintHorizontal_bias="0.506"
        app:layout_constraintStart_toStartOf="@+id/arthritis"
        app:layout_constraintTop_toTopOf="@+id/arthritis"
        app:layout_constraintVertical_bias="0.758" />

    <TextView
        android:layout_width="match_parent"
         android:background="@color/pink_700"
        android:layout_height="wrap_content"
        android:text="This App is developed by Kunal Agarwal &amp; Gaurav Agarwal in the Quantum Nanotechnology Lab, Department of Chemical Engineering, IIT Guwahati"
        android:textColor="#fff"
        android:textStyle="bold"
        android:padding="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.473"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/arthritis"
        app:layout_constraintVertical_bias="1" />


</androidx.constraintlayout.widget.ConstraintLayout>